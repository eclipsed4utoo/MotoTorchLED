<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
				android:id="@+id/application_settings_layout_root" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:padding="1dip"> 
                
	<ScrollView android:layout_height="wrap_content" 
				android:id="@+id/ScrollView01" 
				android:layout_width="wrap_content" 
				android:scrollbarAlwaysDrawHorizontalTrack="false" 
				android:scrollbars="vertical">
			
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					    android:orientation="vertical"
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    >
    
			<CheckBox android:layout_width="wrap_content" 
		  			  android:onClick="chkDimScreen_Click" 
					  android:layout_height="40dip" 
					  android:layout_marginLeft="250dip" 
					  android:clickable="true" 
					  android:textSize="25px" 
					  android:visibility="visible" 
					  android:text="" 
					  android:layout_marginTop="45dip" 
					  android:id="@+id/chkApplicationSettingsTurnOnTorch"/>
		  
			<TextView android:layout_height="wrap_content" 
					  android:id="@+id/TextView9" 
					  android:layout_marginLeft="20dip" 
					  android:layout_width="220dip" 
					  android:text="Torch Mode will turn on when application is loaded" 
					  android:layout_marginTop="68dip"/>
					  
			<TextView android:layout_height="25dip" 
					  android:layout_width="wrap_content" 
					  android:id="@+id/TextView9" 
					  android:textSize="25px" 
					  android:layout_marginLeft="20dip" 
					  android:text="Torch On When Loaded" 
					  android:layout_marginTop="40dip"/>
					  
			<TextView android:id="@+id/TextView02" 
					  android:layout_height="wrap_content" 
					  android:background="@color/Grey" 
					  android:textColor="@color/Black" 
					  android:layout_width="fill_parent" 
					  android:text="  Application Settings"/>
					  
			<CheckBox android:layout_width="wrap_content" 
		  			  android:onClick="chkDimScreen_Click" 
					  android:layout_height="40dip" 
					  android:layout_marginLeft="250dip" 
					  android:clickable="true" 
					  android:textSize="25px" 
					  android:visibility="visible" 
					  android:text="" 
					  android:layout_marginTop="130dip" 
					  android:id="@+id/chkApplicationSettingsTurnOffTorch"/>
					  
			<TextView android:layout_height="25dip" 
					  android:layout_width="wrap_content" 
					  android:id="@+id/TextView9" 
					  android:textSize="25px" 
					  android:layout_marginLeft="20dip" 
					  android:text="Torch Off When Closed" 
					  android:layout_marginTop="125dip"/>	
					  
			<TextView android:layout_height="wrap_content" 
					  android:id="@+id/TextView9" 
					  android:layout_marginLeft="20dip" 
					  android:layout_width="220dip" 
					  android:text="Torch Mode will turn off when application is closed(Using Exit button)" 
					  android:layout_marginTop="155dip"/>	
					  
			<TextView android:id="@+id/TextView02" 
					  android:background="@color/Grey" 
					  android:textColor="@color/Black" 
					  android:layout_width="fill_parent"  
					  android:text="" 
					  android:layout_height="2dip" 
					  android:layout_marginTop="115dip"/>	
    
		</RelativeLayout>
	</ScrollView>
</LinearLayout>